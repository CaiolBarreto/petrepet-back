// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String
  dogs     Dog[]

  @@map("tutors")
}

model Dog {
  id       Int        @id @default(autoincrement())
  name     String
  tutor    User       @relation(fields: [tutor_id], references: [id])
  tutor_id Int
  historic Historic[]

  @@map("dogs")
}

model Historic {
  id           Int      @id @default(autoincrement())
  steps_amount Int
  time         DateTime @default(now())
  dog          Dog      @relation(fields: [dog_id], references: [id])
  dog_id       Int

  @@map("historic")
}
